{
  "schemaVersion": 1,
  "manifest": {
    "id": "codexchat.calendar-assistant",
    "name": "Calendar Assistant",
    "version": "1.0.0",
    "description": "Read-only calendar checks powered by native actions.",
    "author": "CodexChat",
    "license": "MIT",
    "repository": "https://github.com/bikz/codexchat"
  },
  "theme": {},
  "hooks": [
    {
      "id": "calendar-assistant-refresh",
      "event": "thread.started",
      "handler": {
        "command": ["sh", "scripts/calendar_assistant.sh"],
        "cwd": "."
      },
      "permissions": {},
      "timeoutMs": 5000,
      "debounceMs": 0
    },
    {
      "id": "calendar-assistant-turn-refresh",
      "event": "turn.completed",
      "handler": {
        "command": ["sh", "scripts/calendar_assistant.sh"],
        "cwd": "."
      },
      "permissions": {},
      "timeoutMs": 5000,
      "debounceMs": 0
    }
  ],
  "automations": [],
  "uiSlots": {
    "modsBar": {
      "enabled": true,
      "title": "Calendar Assistant",
      "source": {
        "type": "handlerOutput"
      }
    }
  }
}
