{
  "schemaVersion": 1,
  "manifest": {
    "id": "codexchat.personal-notes",
    "name": "Personal Notes",
    "version": "1.0.0",
    "description": "Per-thread personal notes in the Mods bar.",
    "author": "CodexChat",
    "license": "MIT",
    "repository": "https://github.com/bikz/codexchat"
  },
  "theme": {},
  "hooks": [
    {
      "id": "notes-thread-start",
      "event": "thread.started",
      "handler": {
        "command": ["sh", "scripts/notes.sh"],
        "cwd": "."
      },
      "permissions": {},
      "timeoutMs": 5000,
      "debounceMs": 0
    },
    {
      "id": "notes-turn-refresh",
      "event": "turn.completed",
      "handler": {
        "command": ["sh", "scripts/notes.sh"],
        "cwd": "."
      },
      "permissions": {},
      "timeoutMs": 5000,
      "debounceMs": 0
    },
    {
      "id": "notes-action",
      "event": "modsBar.action",
      "handler": {
        "command": ["sh", "scripts/notes.sh"],
        "cwd": "."
      },
      "permissions": {},
      "timeoutMs": 5000,
      "debounceMs": 0
    }
  ],
  "automations": [],
  "uiSlots": {
    "modsBar": {
      "enabled": true,
      "title": "Personal Notes",
      "requiresThread": true,
      "source": {
        "type": "handlerOutput"
      }
    }
  }
}
